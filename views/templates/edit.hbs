<h1 id="editTitle">Edit a photo</h1>

<div id="editContainer">
  <form action="/gallery/{{id}}?_method=PUT" method="POST" enctype="application/x-www-form-urlencoded">
    Author:<br>
    <input type="text" name="author" placeholder="{{author}}"><br>
    Title:<br>
    <input type="text" name="title" placeholder="{{title}}"><br>
    Link:<br>
    <input type="text" name="link" placeholder="{{link}}"><br>
    Description:<br>
    <textarea id="descriptionText" name="description" placeholder="{{description}}"></textarea><br><br>
    <button id="editSubmitButton">Submit</button><br><br>
  </form>
</div>
